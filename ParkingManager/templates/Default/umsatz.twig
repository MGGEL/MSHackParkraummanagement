{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md">

            <script src="https://code.highcharts.com/highcharts.js"></script>
            <script src="https://code.highcharts.com/modules/data.js"></script>
            <script src="https://code.highcharts.com/modules/exporting.js"></script>
            <script src="https://code.highcharts.com/modules/export-data.js"></script>
            <script src="https://code.highcharts.com/modules/accessibility.js"></script>

            <div>
                <label for="start">Von:</label>
                <input type="datetime-local" id="start" name="start" value="2020-01-01T00:00" />
                <label for="ende">Bis:</label>
                <input type="datetime-local" id="ende" name="ende" value="2020-09-26T00:00" />
                <label>Parkbereiche:
                    <select name="top5">
                        <option selected="selected">Gesamt</option>
                        <option>Mitte</option>
                        <option>Nord</option>
                        <option>Ost</option>
                        <option>Süd-Ost</option>
                        <option>Hiltrup</option>
                        <option>West</option>
                    </select>
                </label>
            </div>
            <label>Typ Falschparken:
                <select name="top5">
                    <option selected="selected">Gesamt</option>
                    <option>Zeitüberschreitung</option>
                    <option>Parkverbotszone</option>
                    <option>Kein Anwohner</option>
                </select>
            </label>

            <figure class="highcharts-figure">
                <div id="container"></div>
            </figure>


        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('umsatz') }}
{% endblock %}